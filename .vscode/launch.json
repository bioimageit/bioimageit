{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "BioImageIT",
            "type": "debugpy",
            "python": ".pixi/envs/default/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/pyflow.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "autoReload": {
                "enable": true
            },
            "windows": {
                "python": ".pixi/envs/default/python.exe"
            }
        },
        {
            "name": "workflow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/workflow.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "launcher",
            "python": ".pixi/envs/package/bin/python",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bioimageit.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "autoReload": {
                "enable": true
            },
            "windows": {
                "python": ".pixi/envs/package/python.exe"
            }
        },
    ]
}